{
    "manifest_version": 2,
    "name": "Task Reward System",
    "version": "1.0",

    "browser_action": {
        "default_popup": "templates/index.html",
        "default_icon": "static/images/check-mark-2.png"
    },

    "content_scripts":[{
         "matches":["<all_urls>"],
        "js":["content.js"],
        "persistent":false
    }],

    "background": {
        "scripts": ["background.js"]
    },

    "permissions":[
        "tabs",
        "activeTab",
        "unlimitedStorage",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "*://*/*"
    ]
}